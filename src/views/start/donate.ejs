    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#ff6b6b',
                    }
                }
            }
        };

        // Función para abrir el modal de donación
        function openModal() {
            document.getElementById('donation-modal').classList.remove('hidden');
        }

        // Función para cerrar el modal
        function closeModal() {
            document.getElementById('donation-modal').classList.add('hidden');
        }

        // Función para abrir el modal de cómo se utiliza la donación
        function openUsageModal() {
            document.getElementById('usage-modal').classList.remove('hidden');
        }

        // Función para cerrar el modal de cómo se utiliza la donación
        function closeUsageModal() {
            document.getElementById('usage-modal').classList.add('hidden');
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

